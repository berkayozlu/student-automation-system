@page "/"
@using StudentAutomation.Frontend.Models
@using StudentAutomation.Frontend.Services
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Dashboard - Student Automation System</PageTitle>

@if (!isInitialized)
{
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (currentUser == null)
{
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Redirecting...</span>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col">
                <h1 class="h3 mb-0">Welcome, @currentUser.FirstName @currentUser.LastName</h1>
                <p class="text-muted">@string.Join(", ", currentUser.Roles) Dashboard</p>
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-danger" @onclick="HandleLogout">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </button>
            </div>
        </div>

        @if (currentUser.Roles.Contains("Admin"))
        {
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Students</h4>
                                    <p class="card-text">Manage all students</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-user-graduate fa-2x"></i>
                                </div>
                            </div>
                            <a href="/students" class="btn btn-light btn-sm mt-2">View Students</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Teachers</h4>
                                    <p class="card-text">Manage all teachers</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-chalkboard-teacher fa-2x"></i>
                                </div>
                            </div>
                            <a href="/teachers" class="btn btn-light btn-sm mt-2">View Teachers</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Courses</h4>
                                    <p class="card-text">Manage all courses</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-book fa-2x"></i>
                                </div>
                            </div>
                            <a href="/courses" class="btn btn-light btn-sm mt-2">View Courses</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Reports</h4>
                                    <p class="card-text">View system reports</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-chart-bar fa-2x"></i>
                                </div>
                            </div>
                            <a href="/reports" class="btn btn-light btn-sm mt-2">View Reports</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (currentUser.Roles.Contains("Teacher"))
        {
            <div class="row">
                <div class="col-md-12 mb-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">My Courses</h4>
                                    <p class="card-text">Manage your courses, grades, and attendance</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-chalkboard-teacher fa-2x"></i>
                                </div>
                            </div>
                            <a href="/teacher-courses" class="btn btn-light btn-sm mt-2">View My Courses</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (currentUser.Roles.Contains("Student"))
        {
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card h-100 shadow-sm border-0 bg-gradient-primary text-white">
                            <div class="card-body d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">My Courses</h5>
                                    <p class="card-text mb-0">View enrolled courses</p>
                                </div>
                                <div class="ms-3">
                                    <i class="fas fa-book-open fa-2x opacity-75"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <a href="/my-courses" class="btn btn-light btn-sm">
                                    <i class="fas fa-arrow-right me-1"></i>View Courses
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card h-100 shadow-sm border-0 bg-gradient-success text-white">
                            <div class="card-body d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">My Grades</h5>
                                    <p class="card-text mb-0">View your grades</p>
                                </div>
                                <div class="ms-3">
                                    <i class="fas fa-chart-line fa-2x opacity-75"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <a href="/my-grades" class="btn btn-light btn-sm">
                                    <i class="fas fa-arrow-right me-1"></i>View Grades
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Profile</h4>
                                    <p class="card-text">Manage your profile</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-user fa-2x"></i>
                                </div>
                            </div>
                            <a href="/my-profile" class="btn btn-light btn-sm mt-2">View Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private UserDto? currentUser;
    private bool isInitialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                if (!await AuthService.IsAuthenticatedAsync())
                {
                    Navigation.NavigateTo("/login");
                    return;
                }

                currentUser = await AuthService.GetCurrentUserAsync();
                if (currentUser == null)
                {
                    var profileResult = await AuthService.GetProfileAsync();
                    if (profileResult.Success && profileResult.User != null)
                    {
                        currentUser = profileResult.User;
                    }
                    else
                    {
                        Navigation.NavigateTo("/login");
                        return;
                    }
                }
            }
            catch
            {
                Navigation.NavigateTo("/login");
                return;
            }
            finally
            {
                isInitialized = true;
                StateHasChanged();
            }
        }
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}
